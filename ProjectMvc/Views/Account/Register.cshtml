@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/Auth_Layout.cshtml";
}

<div class="main-w3layouts wrapper">
    <h1>Creative SignUp Form</h1>
    
    <div class="main-agileinfo">
        <div class="agileits-top">
            <form asp-action="Register" asp-controller="Account" method="post">
                <div asp-validation-summary ="ModelOnly"></div>

                <input  asp-for="FirstName" placeholder="First Name" >
                <span asp-validation-for="FirstName" class="text-danger"></span>

                <input asp-for="SecondName" placeholder="Second Name">
                <span asp-validation-for="SecondName" class="text-danger"></span>

                <input asp-for="UserName" placeholder="User Name">
                <span asp-validation-for="UserName" class="text-danger"></span>

                <input asp-for="Email" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>

                <input asp-for="Password" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>

                <input asp-for="ConfirmPassword" placeholder="Confirm Password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>


                <div class="wthree-text">
                    <label class="anim">
                        <input asp-for="IsConfirm">
                        <span>I Agree To The Terms & Conditions</span>
                    </label>
                    <div class="clear"> </div>
                </div>
                <input type="submit" value="SIGNUP">
            </form>
            <p>Don't have an Account? <a asp-action="Login" asp-controller="Account"> Login Now!</a></p>
        </div>
    </div>

