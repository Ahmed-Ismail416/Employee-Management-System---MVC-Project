@model Business_Logic.DTOs.DepartmentDetailViewModel

@{
    ViewData["Title"] = "Department Details";
}

<h1 class="my-5 w-75">Department Details</h1>

<ul class="nav nav-tabs" id="departmentTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general"
           role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration"
           role="tab" aria-controls="administration" aria-selected="false">Administration</a>
    </li>
</ul>

<div class="tab-content" id="departmentTabContent">
    <!-- General Tab -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="row">
            <div class="form-group mb-3 col-6">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="form-group mb-3 col-6">
                <label asp-for="Code" class="form-label"></label>
                <input asp-for="Code" class="form-control" readonly />
            </div>
            <div class="form-group mb-3 col-12">
                <label asp-for="Discription" class="form-label"></label>
                <textarea asp-for="Discription" class="form-control" readonly rows="3"></textarea>
            </div>
        </div>
    </div>

    <!-- Administration Tab -->
    <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration-tab">
        <div class="form-group mb-3 col-12">
            <label asp-for="CreatedBy" class="form-label"></label>
            <input asp-for="CreatedBy" class="form-control" readonly />
        </div>
        <div class="form-group mb-3 col-12">
            <label asp-for="CreatedOn" class="form-label"></label>
            <input asp-for="CreatedOn" class="form-control" readonly />
        </div>
        <div class="form-group mb-3 col-12">
            <label asp-for="LastModifiedBy" class="form-label"></label>
            <input asp-for="LastModifiedBy" class="form-control" readonly />
        </div>
        <div class="form-group mb-3 col-12">
            <label asp-for="LastModifiedOn" class="form-label"></label>
            <input asp-for="LastModifiedOn" class="form-control" readonly />
        </div>
        <div class="form-group mb-3 col-12">
            <div class="form-check">
                <input asp-for="IsDeleted" class="form-check-input" type="checkbox" disabled />
                <label class="form-check-label" asp-for="IsDeleted"></label>
            </div>
        </div>
    </div>

    <!-- Buttons -->
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        <a asp-action="Index" class="btn btn-outline-dark">Back To List</a>
    </div>
</div>
