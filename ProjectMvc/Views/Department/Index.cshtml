@model IEnumerable<Business_Logic.DTOs.DepartmentDto>

@{
    ViewData["Title"] = "All Departments";
}



@if (!string.IsNullOrWhiteSpace(TempData["Message"] as string))
{
    <div aria-live="polite" aria-atomic="true" class="toast-container position-fixed p-3" style="bottom: 25px; right:25px; z-index: 100;">
        <div class="toast fade show " role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto text-success">Success!!</strong>
                <small>Just now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @TempData["Message"]
            </div>
        </div>
    </div>
}

<a class="btn btn-primary my-3" asp-controller="Department" asp-action="Create">
    Create New Department
</a>
<br />

@if (Model.Any())
{
    <table class="table table-striped table-hover mt-2">
        <thead class="text-center">
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Description</th>
                <th>Date Of Creation</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.Description</td>
                    <td>@department.DateOfCreation</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@department.Id">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@department.Id">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@department.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this department?');" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Delete</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-2 text-center">
        <strong>No Departments Found !!</strong>
    </div>
}
